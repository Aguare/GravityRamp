<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="1230dp"
        android:layout_height="700dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="21dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONECTAR MODULO BT"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="2"
                    android:text="Activar" />

                <Button
                    android:id="@+id/button_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:text="Desactivar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_devices"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="device" />

                <Spinner
                    android:id="@+id/spinner_avaiable"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <Button
                android:id="@+id/button_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conectar" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="ENVIAR INSTRUCCIONES"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/text_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/button_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="CAMBIAR ÁNGULO DE LA RAMPA"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="0" />

                <Button
                    android:id="@+id/button_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="15" />

                <Button
                    android:id="@+id/button_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="30" />

                <Button
                    android:id="@+id/button_45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:text="45" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="30"
                    android:text="INICIAR" />

                <Button
                    android:id="@+id/button_getTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="10"
                    android:enabled="false"
                    android:text="ULTIMO TIEMPO" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="DATOS RECIBIDOS"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/text_entrys"
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:clickable="false"
                android:focusable="false"
                android:textIsSelectable="false"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="none|textMultiLine"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="665dp"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="585dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CALCULOS PARA 15 GRADOS"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TableLayout
                                android:id="@+id/table_15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_vertical"
                                android:layout_marginStart="25dp"
                                android:layout_marginEnd="25dp"
                                android:background="@drawable/table_border"
                                android:stretchColumns="*">

                                <!-- Row 1: Column Names -->
                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/table_border"
                                    android:textAlignment="center">

                                    <TextView
                                        android:id="@+id/tvLanzamiento"
                                        android:padding="10dp"
                                        android:text="Lanzamiento"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvDistancia"
                                        android:padding="10dp"
                                        android:text="Distancia"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvTiempo"
                                        android:padding="10dp"
                                        android:text="Tiempo"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvVelocidad"
                                        android:padding="10dp"
                                        android:text="Velocidad"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvAceleracion"
                                        android:padding="10dp"
                                        android:text="Aceleración"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                </TableRow>

                                <!-- Add more rows as necessary -->

                            </TableLayout>

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/distance_time_15"
                                android:layout_width="800dp"
                                android:layout_height="542dp"
                                android:layout_gravity="center"
                                android:layout_margin="20dp"
                                android:layout_marginStart="49dp"
                                android:layout_marginEnd="49dp"
                                android:background="@android:color/white"
                                app:layout_constraintTop_toBottomOf="@+id/text_entrys"
                                tools:ignore="MissingConstraints">

                            </com.github.mikephil.charting.charts.BarChart>

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/speed_time_15"
                                android:layout_width="800dp"
                                android:layout_height="542dp"
                                android:layout_gravity="center"
                                android:layout_margin="20dp"
                                android:layout_marginStart="49dp"
                                android:layout_marginEnd="49dp"
                                android:background="@android:color/white"
                                app:layout_constraintTop_toBottomOf="@+id/text_entrys"
                                tools:ignore="MissingConstraints">

                            </com.github.mikephil.charting.charts.BarChart>

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/ac_time_15"
                                android:layout_width="800dp"
                                android:layout_height="542dp"
                                android:layout_gravity="center"
                                android:layout_margin="20dp"
                                android:layout_marginStart="49dp"
                                android:layout_marginEnd="49dp"
                                android:background="@android:color/white"
                                app:layout_constraintTop_toBottomOf="@+id/text_entrys"
                                tools:ignore="MissingConstraints">

                            </com.github.mikephil.charting.charts.BarChart>

                        </LinearLayout>
                    </ScrollView>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CALCULOS PARA 30 GRADOS"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TableLayout
                                android:id="@+id/table_30"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_vertical"
                                android:layout_marginStart="25dp"
                                android:layout_marginEnd="25dp"
                                android:background="@drawable/table_border"
                                android:stretchColumns="*">

                                <!-- Row 1: Column Names -->
                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/table_border"
                                    android:textAlignment="center">

                                    <TextView
                                        android:id="@+id/tvLanzamiento2"
                                        android:padding="10dp"
                                        android:text="Lanzamiento"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvDistancia2"
                                        android:padding="10dp"
                                        android:text="Distancia"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvTiempo2"
                                        android:padding="10dp"
                                        android:text="Tiempo"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvVelocidad2"
                                        android:padding="10dp"
                                        android:text="Velocidad"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvAceleracion2"
                                        android:padding="10dp"
                                        android:text="Aceleración"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                </TableRow>

                                <!-- Add more rows as necessary -->

                            </TableLayout>

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/distance_time_30"
                                android:layout_width="800dp"
                                android:layout_height="542dp"
                                android:layout_gravity="center"
                                android:layout_margin="20dp"
                                android:layout_marginStart="49dp"
                                android:layout_marginEnd="49dp"
                                android:background="@android:color/white"
                                app:layout_constraintTop_toBottomOf="@+id/text_entrys"
                                tools:ignore="MissingConstraints">

                            </com.github.mikephil.charting.charts.BarChart>

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/speed_time_30"
                                android:layout_width="800dp"
                                android:layout_height="542dp"
                                android:layout_gravity="center"
                                android:layout_margin="20dp"
                                android:layout_marginStart="49dp"
                                android:layout_marginEnd="49dp"
                                android:background="@android:color/white"
                                app:layout_constraintTop_toBottomOf="@+id/text_entrys"
                                tools:ignore="MissingConstraints">

                            </com.github.mikephil.charting.charts.BarChart>

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/ac_time_30"
                                android:layout_width="800dp"
                                android:layout_height="542dp"
                                android:layout_gravity="center"
                                android:layout_margin="20dp"
                                android:layout_marginStart="49dp"
                                android:layout_marginEnd="49dp"
                                android:background="@android:color/white"
                                app:layout_constraintTop_toBottomOf="@+id/text_entrys"
                                tools:ignore="MissingConstraints">

                            </com.github.mikephil.charting.charts.BarChart>

                        </LinearLayout>
                    </ScrollView>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/textView33"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CALCULOS PARA 45 GRADOS"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TableLayout
                                android:id="@+id/table_45"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill_vertical"
                                android:layout_marginStart="25dp"
                                android:layout_marginEnd="25dp"
                                android:background="@drawable/table_border"
                                android:stretchColumns="*">

                                <!-- Row 1: Column Names -->
                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/table_border"
                                    android:textAlignment="center">

                                    <TextView
                                        android:id="@+id/tvLanzamiento3"
                                        android:padding="10dp"
                                        android:text="Lanzamiento"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvDistancia3"
                                        android:padding="10dp"
                                        android:text="Distancia"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvTiempo3"
                                        android:padding="10dp"
                                        android:text="Tiempo"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvVelocidad3"
                                        android:padding="10dp"
                                        android:text="Velocidad"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvAceleracion3"
                                        android:padding="10dp"
                                        android:text="Aceleración"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                </TableRow>

                                <!-- Add more rows as necessary -->

                            </TableLayout>

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/distance_time_45"
                                android:layout_width="800dp"
                                android:layout_height="542dp"
                                android:layout_gravity="center"
                                android:layout_margin="20dp"
                                android:layout_marginStart="49dp"
                                android:layout_marginEnd="49dp"
                                android:background="@android:color/white"
                                app:layout_constraintTop_toBottomOf="@+id/text_entrys"
                                tools:ignore="MissingConstraints">

                            </com.github.mikephil.charting.charts.BarChart>

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/speed_time_45"
                                android:layout_width="800dp"
                                android:layout_height="542dp"
                                android:layout_gravity="center"
                                android:layout_margin="20dp"
                                android:layout_marginStart="49dp"
                                android:layout_marginEnd="49dp"
                                android:background="@android:color/white"
                                app:layout_constraintTop_toBottomOf="@+id/text_entrys"
                                tools:ignore="MissingConstraints">

                            </com.github.mikephil.charting.charts.BarChart>

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/ac_time_45"
                                android:layout_width="800dp"
                                android:layout_height="542dp"
                                android:layout_gravity="center"
                                android:layout_margin="20dp"
                                android:layout_marginStart="49dp"
                                android:layout_marginEnd="49dp"
                                android:background="@android:color/white"
                                app:layout_constraintTop_toBottomOf="@+id/text_entrys"
                                tools:ignore="MissingConstraints">

                            </com.github.mikephil.charting.charts.BarChart>

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="Limpiar" />

                <Button
                    android:id="@+id/button_export"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:text="Exportar" />

                <Button
                    android:id="@+id/button_chart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:text="GRAFICAR" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>